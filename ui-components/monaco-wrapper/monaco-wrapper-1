    setSavedCode(code);
    console.log("ğŸ’œ Code saved with love!", code.length, "characters of pure magic!");
  }

  const handleLoad = (code: string) => {
    console.log("ğŸ“‚ Loading your beautiful creation!");
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-950 via-purple-900 to-indigo-950 p-6">
