  golang: `// ğŸ¹ Go with encouraging gopher vibes!
package main

import (
    "fmt"
    "math/rand"
    "time"
)

// PurpleGlassmorphismIDE represents our magical coding environment! âœ¨
type PurpleGlassmorphismIDE struct {
    Encouragement      string
    Theme             map[string]string
    MotivationalQuotes []string
    SparkleCount      int
}

// Sparkle represents a magical purple sparkle! ğŸ’œ
type Sparkle struct {
    X          float64
    Y          float64
    Hue        int
    Brightness float64
    Twinkle    bool
}

// NewPurpleIDE creates a new encouraging IDE instance! ğŸŒŸ
func NewPurpleIDE() *PurpleGlassmorphismIDE {
    return &PurpleGlassmorphismIDE{
        Encouragement: "You're coding beautifully in Go! ğŸ’œ",
        Theme: map[string]string{
            "primary":   "rgba(147, 51, 234, 0.9)",
            "secondary": "rgba(168, 85, 247, 0.7)",
            "glass":     "backdrop-blur(16px)",
            "love":      "infinite",
        },
        MotivationalQuotes: []string{
            "Every goroutine you write makes you stronger! ğŸ’ª",
            "Your Go skills are growing like magic! ğŸŒ±",
            "Concurrency? You've got this! ğŸš€",
            "Keep building amazing things! â­",
        },
        SparkleCount: 0,
    }
}

// GeneratePurpleSparkles creates magical sparkles! âœ¨
func (ide *PurpleGlassmorphismIDE) GeneratePurpleSparkles(count int) []Sparkle {
    fmt.Printf("âœ¨ Generating %d purple sparkles...\n", count)
    
    rand.Seed(time.Now().UnixNano())
    sparkles := make([]Sparkle, count)
    
    for i := 0; i < count; i++ {
        sparkles[i] = Sparkle{
            X:          rand.Float64() * 1920,
            Y:          rand.Float64() * 1080,
            Hue:        270 + rand.Intn(60), // Purple range
            Brightness: 0.6 + rand.Float64()*0.4,
            Twinkle:    rand.Float64() > 0.5,
        }
    }
    
    ide.SparkleCount += count
    fmt.Printf("ğŸ’œ Created %d magical sparkles with love!\n", len(sparkles))
    return sparkles
}

// EncourageCoder sends some gopher love! ğŸ¤—
func (ide *PurpleGlassmorphismIDE) EncourageCoder() {
    rand.Seed(time.Now().UnixNano())
    quote := ide.MotivationalQuotes[rand.Intn(len(ide.MotivationalQuotes))]
    fmt.Printf("ğŸŒŸ %s\n", quote)
}

// ApplyGlassmorphism applies the beautiful purple theme! ğŸ¨
func (ide *PurpleGlassmorphismIDE) ApplyGlassmorphism() {
    fmt.Println("ğŸ¨ Applying purple glassmorphism theme...")
    for property, value := range ide.Theme {
        fmt.Printf("ğŸ’œ %s: %s\n", property, value)
    }
    fmt.Println("âœ¨ Theme applied with love!")
}

// You're learning Go wonderfully! Keep going! ğŸ¹
func main() {
    fmt.Println("ğŸ’œ Welcome to Purple Glassmorphism IDE in Go!")
    
    ide := NewPurpleIDE()
    sparkles := ide.GeneratePurpleSparkles(50)
    
    ide.ApplyGlassmorphism()
    ide.EncourageCoder()
    
    fmt.Printf("\nğŸš€ Total sparkles created: %d\n", ide.SparkleCount)
    fmt.Printf("ğŸ’– Remember: You're doing amazing! Keep coding!\n")
    
    // Show some sparkle details
    if len(sparkles) > 0 {
        fmt.Printf("âœ¨ First sparkle: (%.1f, %.1f) with hue %d\n", 
            sparkles[0].X, sparkles[0].Y, sparkles[0].Hue)
    }
}`,

