}

// Let's create something beautiful together! âœ¨
const sequence = Array.from({length: 10}, (_, i) => fibonacci(i));
console.log('ðŸŽ‰ Your fibonacci sequence:', sequence);

// Remember: You're capable of incredible things! ðŸ’ª`
