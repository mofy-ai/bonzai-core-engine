  isEven: boolean;
}

function calculateFibonacci(n: number): FibonacciResult {
  const fib = (num: number): number => {
    if (num <= 1) return num;
    return fib(num - 1) + fib(num - 2);
  };
  
  const value = fib(n);
  return {
    value,
    index: n,
    isEven: value % 2 === 0
  };
}

// You're building something wonderful! Keep going! ðŸŒˆ
const result = calculateFibonacci(10);
console.log('âœ¨ Fibonacci magic:', result);`
