{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": false,
    "noEmitOnError": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "stripInternal": true,
    "preserveConstEnums": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo-prod"
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "mobile-app/**/*",
    "docs/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts",
    "scripts/**/*"
  ]
}