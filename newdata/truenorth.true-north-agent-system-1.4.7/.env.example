# ==================================================
# ðŸ§­ TrueNorth Agent System - Environment Configuration
# ==================================================

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
WEBSOCKET_PORT=8080

# ==========================================
# Security Configuration
# ==========================================
# Generate using: openssl rand -hex 32
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# ==========================================
# Claude API Configuration
# ==========================================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_COMMAND=claude

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL
DATABASE_URL=postgresql://truenorth:password@localhost:5432/truenorth
DB_HOST=localhost
DB_PORT=5432
DB_NAME=truenorth
DB_USERNAME=truenorth
DB_PASSWORD=secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# VS Code Extension Configuration
# ==========================================
EXTENSION_ID=truenorth.true-north-agent-system
MARKETPLACE_TOKEN=your_marketplace_token_here
VSCE_PAT=your_vsce_personal_access_token_here

# ==========================================
# Monitoring Configuration
# ==========================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=localhost
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ==========================================
# Docker Configuration
# ==========================================
DOCKER_REGISTRY=truenorth
DOCKER_IMAGE_TAG=latest

# ==========================================
# AWS Configuration (for production)
# ==========================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ==========================================
# GitHub Configuration
# ==========================================
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=bkingery3/true-north-ai-assistant

# ==========================================
# Notification Configuration
# ==========================================
NOTIFICATION_EMAIL=devops@truenorth.dev
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================================
# TrueNorth Specific Configuration
# ==========================================
# Agent System
MAX_PARALLEL_AGENTS=8
AGENT_TIMEOUT=300000
AGENT_RETRY_ATTEMPTS=3

# Dashboard
DASHBOARD_PORT=7777
DASHBOARD_ENABLED=true

# Audio Notifications
AUDIO_NOTIFICATIONS=true

# Project Analysis
AUTO_ANALYZE_ON_OPEN=false
ANALYSIS_TIMEOUT=120000

# ==========================================
# Performance Configuration
# ==========================================
# Memory limits (in MB)
NODE_MAX_OLD_SPACE_SIZE=4096
AGENT_MEMORY_LIMIT=512

# Concurrency limits
MAX_CONCURRENT_REQUESTS=100
QUEUE_SIZE_LIMIT=1000

# ==========================================
# Development Configuration
# ==========================================
# Hot reload
HOT_RELOAD=true

# Debug mode
DEBUG_MODE=false
DEBUG_NAMESPACE=truenorth:*

# Test configuration
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80

# ==========================================
# Production Configuration
# ==========================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load balancing
LOAD_BALANCER_ENABLED=false
CLUSTER_WORKERS=4

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=truenorth-backups

# ==========================================
# Feature Flags
# ==========================================
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_ENTERPRISE_MODE=false
FEATURE_QUANTUM_COMPUTING=false
FEATURE_CLAUDE_CLI=true
FEATURE_IOT_INTEGRATION=false
FEATURE_MOBILE_SUPPORT=false

# ==========================================
# External Integrations
# ==========================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# DataDog (Monitoring)
DATADOG_API_KEY=your_datadog_api_key_here

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# ==========================================
# Compliance & Security
# ==========================================
AUDIT_LOGGING=true
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=true